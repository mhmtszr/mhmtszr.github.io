---
const presentations = [
  {
    title: 'Modern Backend Architecture',
    event: 'TechConf 2024',
    date: 'March 2024',
    description: 'A comprehensive overview of modern backend architecture patterns',
    slides: 'https://slideshare.net/yourusername/modern-backend',
    video: 'https://youtube.com/watch?v=example',
    thumbnail: 'https://via.placeholder.com/400x225'
  },
  {
    title: 'Scaling Distributed Systems',
    event: 'Backend Summit 2023',
    date: 'November 2023',
    description: 'Deep dive into scaling challenges and solutions',
    slides: 'https://slideshare.net/yourusername/scaling-systems',
    video: 'https://youtube.com/watch?v=example2',
    thumbnail: 'https://via.placeholder.com/400x225'
  }
];
---
<section id="media" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12 text-center">Media & Presentations</h2>
    <div class="grid md:grid-cols-2 gap-8">
      {presentations.map(pres => (
        <div class="bg-gray-50 rounded-lg overflow-hidden shadow-md">
          <div class="relative">
            <img src={pres.thumbnail} alt={pres.title} class="w-full aspect-video object-cover" />
            <a href={pres.video} target="_blank" class="absolute inset-0 flex items-center justify-center bg-black/50 opacity-0 hover:opacity-100 transition">
              <span class="text-white">Watch Video</span>
            </a>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">{pres.title}</h3>
            <p class="text-gray-600 mb-2">{pres.event} - {pres.date}</p>
            <p class="text-gray-700 mb-4">{pres.description}</p>
            <a href={pres.slides} target="_blank" class="text-primary-600 hover:text-primary-700">
              View Slides
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>