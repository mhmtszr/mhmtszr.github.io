---
const skillCategories = [
  {
    title: 'Languages',
    skills: ['Go', 'Kotlin', 'Java']
  },
  {
    title: 'Databases',
    skills: ['Couchbase', 'Elasticsearch', 'PostgreSQL', 'Redis']
  },
  {
    title: 'Tooling',
    skills: ['Kafka', 'Kubernetes', 'gRPC', 'Docker', 'CI/CD', 'RabbitMQ']
  }
];
---
<section id="skills" class="py-20 bg-white flex-1">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-12 text-center">Skills & Technologies</h2>
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      {skillCategories.map(category => (
        <div class="bg-gray-50 p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-4 text-primary-600">{category.title}</h3>
          <div class="flex flex-wrap gap-2">
            {category.skills.map(skill => (
              <span class="bg-white px-4 py-2 rounded-lg text-gray-700 shadow-sm">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>